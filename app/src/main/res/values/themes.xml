<resources>
    <!-- Base application theme (Material 3, NoActionBar). -->
    <style name="Theme.ServiceHubApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 colors map automatically; keep custom colors if needed -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Remove the Material 3 selection pill background -->
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        
        <!-- Override Material Design colors to prevent purple text inputs -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="DialogAnimationLeft">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="DialogSlideLeft" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Style for the BottomNavigationView Active Indicator -->
    <style name="Widget.ServiceHub.Indicator" parent="">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- Shape Appearance for circular FAB -->
    <style name="ShapeAppearance.ServiceHub.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavText.Active" parent="BottomNavText">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- The background color of the splash screen -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <!-- The icon to display in the center -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launchericon</item>
        <!-- The theme to switch to after the splash screen is done -->
        <item name="postSplashScreenTheme">@style/Theme.ServiceHubApp</item>
    </style>
</resources>
