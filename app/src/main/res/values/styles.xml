<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ValueText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <!-- CalendarView Style -->
    <style name="CalendarViewCustom" parent="android:Widget.Material.CalendarView">
        <item name="android:selectedWeekBackgroundColor">@color/apps_green</item>
        <item name="android:focusedMonthDateColor">@color/apps_green</item>
        <item name="android:unfocusedMonthDateColor">#666666</item>
        <item name="android:weekNumberColor">#999999</item>
        <item name="android:weekDayTextAppearance">@android:style/TextAppearance.Material.Caption</item>
    </style>

    <!-- SRF Checking Screen Styles -->
    <style name="SRFSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/apps_green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SRFLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/apps_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SRFValueBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/bg_input_white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SRFDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryContainer</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!-- Profile Page Styles -->
    <style name="ProfileContentCardShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">60dp</item>
        <item name="cornerSizeTopRight">60dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>