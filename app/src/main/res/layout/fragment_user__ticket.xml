<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="app.hub.user.UserTicketFragment">

    <!-- Header Section with Elevation for Shadow -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleMyTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.05"
            android:shadowColor="#80000000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:text="MY TICKETS"
            android:textColor="?attr/colorOnSurface"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Highlighted Active Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvTabActive"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:minHeight="40dp"
                    android:minWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Active"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:elevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Outlined Completed Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvTabCompleted"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:minHeight="40dp"
                    android:minWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Completed"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:elevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="filter"
                android:focusable="true"
                android:src="@drawable/filter"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:ignore="TouchTargetSizeCheck"/>

        </RelativeLayout>

    </LinearLayout>

    <!-- Tickets List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTickets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        tools:listitem="@layout/item_ticket" />

    <!-- Hidden elements to maintain ID compatibility -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/searchFilterLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/filterScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>