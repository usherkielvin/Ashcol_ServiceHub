<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="app.hub.user.UserTicketFragment">

    <!-- Header Section with Elevation for Shadow -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleMyTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:shadowColor="#20000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="MY TICKETS"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTabActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:background="@drawable/bg_status_rounded"
                    android:backgroundTint="#D1E7D1"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:stateListAnimator="@animator/button_press_shadow"
                    android:text="Active"
                    android:textColor="#1B5E20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTabCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:stateListAnimator="@animator/button_press_shadow"
                    android:text="Completed"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/filter"
                android:contentDescription="filter"
                app:tint="?attr/colorOnSurfaceVariant" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Tickets List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTickets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        tools:listitem="@layout/item_ticket" />

    <!-- Hidden elements to maintain ID compatibility -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/searchFilterLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/filterScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>