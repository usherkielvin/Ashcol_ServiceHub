<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_icon_tint"
    android:fillViewport="true"
    tools:context=".TicketDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- Simple Clean Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/desc_back"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/outline_arrow_back_24"
                app:iconSize="32dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Ticket"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Main Ticket Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mainTicketCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top Section: Ticket ID & General Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvTicketId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TCKTId_0001"
                        android:textColor="@color/service_icon_tint"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Status: Pending"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Paid"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:chipBackgroundColor="#2E7D32"
                        app:chipMinHeight="24dp"
                        app:chipStrokeWidth="0dp" />

                    <LinearLayout
                        android:id="@+id/paymentInfoGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvPaymentAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"
                            tools:text="Amount Paid: PHP 1500.00" />

                        <TextView
                            android:id="@+id/tvPaymentCollectedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"
                            tools:text="Collected by: Juan Dela Cruz" />

                        <TextView
                            android:id="@+id/tvPaymentCollectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"
                            tools:text="Collected: --" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Ticket Number"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvServiceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="General Service"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvUnitType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Window AC Unit"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="My AC needs a deep cleaning."
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="15sp"
                        android:lineHeight="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CONTACT"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="+63 912 345 6789"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BRANCH"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvBranch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Main Branch"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPayNow"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Pay Now"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:backgroundTint="#00B050"
                        app:cornerRadius="24dp"
                        app:elevation="2dp" />
                </LinearLayout>

                <!-- Perforation Line -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@drawable/outline_background_dot_large_24"
                        android:backgroundTint="?attr/colorOutlineVariant"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Side Notches matching background green -->
                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="-16dp"
                        android:background="@drawable/bg_circle_green"
                        android:backgroundTint="@color/service_icon_tint"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="-16dp"
                        android:background="@drawable/bg_circle_green"
                        android:backgroundTint="@color/service_icon_tint"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Bottom Section: Technician, Date, Location, and Map -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/assignmentCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ASSIGNED TECHNICIAN"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvAssignedStaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Not assigned"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvCreatedAt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Jan 15, 2026"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Location details near the map -->
                    <LinearLayout
                        android:id="@+id/locationCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOCATION"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Journey Style dots -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="4dp">
                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/bg_circle_green"
                                    android:backgroundTint="@color/blue" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/outline_background_dot_large_24"
                                    android:backgroundTint="?attr/colorOutlineVariant" />
                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/bg_circle_green"
                                    android:backgroundTint="@color/red" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="123 Main Street, City, Province"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Map Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mapCardContainer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:visibility="visible"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:strokeWidth="1dp">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:liteMode="true" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewMap"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Expand Map View"
                        android:textAllCaps="false"
                        android:textColor="@color/service_icon_tint"
                        android:visibility="visible"
                        app:icon="@drawable/location"
                        app:iconSize="16dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
