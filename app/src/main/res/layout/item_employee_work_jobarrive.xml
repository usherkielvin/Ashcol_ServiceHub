<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardJobStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvJobStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Job Status"
            android:textColor="#9E9E9E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:alpha="0.2"
            android:background="#BDBDBD" />

        <!-- Vertical Progress Tracker -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Connector line -->
            <View
                android:id="@+id/vLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:alpha="0.3"
                android:background="#BDBDBD"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="@+id/ivStep1"
                app:layout_constraintStart_toStartOf="@+id/ivStep1"
                app:layout_constraintTop_toTopOf="@+id/ivStep1" />

            <!-- Step 1: Assigned (Completed State) -->
            <ImageView
                android:id="@+id/ivStep1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_step_solid_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <!-- Step 2: On the Way (Completed State) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tvAssignedStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#D1E7D1"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep1"
                app:layout_constraintTop_toTopOf="@+id/ivStep1"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/tvAssignedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:includeFontPadding="false"
                        android:text="Assigned"
                        android:textColor="#1B5E20"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAssignedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#1B5E20"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/ivStep2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_step_solid_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAssignedStatus"
                app:tint="@color/white" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tvOnWayStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#D1E7D1"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep2"
                app:layout_constraintTop_toTopOf="@+id/ivStep2"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/tvOnWayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:includeFontPadding="false"
                        android:text="On the Way"
                        android:textColor="#1B5E20"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvOnWayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#1B5E20"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 3: Arrived (Active State) -->
            <ImageView
                android:id="@+id/ivStep3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_step_outline_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOnWayStatus"
                app:tint="@color/status_green" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvArrivedDetailsBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#F2F2F2"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivStep3"
                app:layout_constraintTop_toTopOf="@id/ivStep3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvArrivedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Arrived"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tvArrivedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tvArrivedTitle"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text=""
                            android:textColor="#1B5E20"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Phone number: 09123456789"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Address: BLK 12 Coastal, Silang, Dasma"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartService"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="24dp"
                android:text="Start Service"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="13sp"
                app:cornerRadius="20dp"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="@+id/cvArrivedDetailsBox"
                app:layout_constraintStart_toStartOf="@+id/cvArrivedDetailsBox"
                app:layout_constraintTop_toBottomOf="@+id/cvArrivedDetailsBox" />

            <!-- Step 4: In Progress (Upcoming State) -->
            <ImageView
                android:id="@+id/ivStep4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="#BDBDBD"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnStartService"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvInProgressStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="In Progress"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep4"
                app:layout_constraintTop_toTopOf="@+id/ivStep4" />

            <!-- Step 5: Completed (Upcoming State) -->
            <ImageView
                android:id="@+id/ivStep5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="#BDBDBD"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInProgressStatus"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvCompletedStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Completed"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep5"
                app:layout_constraintTop_toTopOf="@+id/ivStep5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>