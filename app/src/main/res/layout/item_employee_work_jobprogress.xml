<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardJobStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvJobStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Job Status"
            android:textColor="#9E9E9E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:alpha="0.2"
            android:background="#BDBDBD" />

        <!-- Vertical Progress Tracker -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Connector line -->
            <View
                android:id="@+id/vLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:alpha="0.3"
                android:background="#BDBDBD"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="@+id/ivStep1"
                app:layout_constraintStart_toStartOf="@+id/ivStep1"
                app:layout_constraintTop_toTopOf="@+id/ivStep1" />

            <!-- Step 1: Assigned (Completed State) -->
            <ImageView
                android:id="@+id/ivStep1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_step_solid_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvAssignedStatus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Assigned"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep1"
                app:layout_constraintTop_toTopOf="@+id/ivStep1"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp" />

            <!-- Step 2: On the Way (Completed State) -->
            <ImageView
                android:id="@+id/ivStep2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_step_solid_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAssignedStatus"
                app:tint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvOnWayStatus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="On the Way"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep2"
                app:layout_constraintTop_toTopOf="@+id/ivStep2"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp" />

            <!-- Step 3: Arrived (Completed State) -->
            <ImageView
                android:id="@+id/ivStep3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_step_solid_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOnWayStatus"
                app:tint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvArrivedStatusLabel"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Arrived"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep3"
                app:layout_constraintTop_toTopOf="@+id/ivStep3"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp" />

            <!-- Step 4: In Progress (Active State) -->
            <ImageView
                android:id="@+id/ivStep4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_step_outline_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvArrivedStatusLabel"
                app:tint="@color/status_green" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvInProgressDetailsBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivStep4"
                app:layout_constraintTop_toTopOf="@id/ivStep4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="In Progress"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tvTicketId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ticket ID: TCKTid_1004"
                            android:textColor="#616161"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Add Photo: before/after service photo"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Before Photo -->
                        <LinearLayout
                            android:id="@+id/btnUploadBefore"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_upload_box"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_add"
                                app:tint="#BDBDBD"
                                android:alpha="0.5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Before"
                                android:textColor="#BDBDBD"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- After Photo -->
                        <LinearLayout
                            android:id="@+id/btnUploadAfter"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_upload_box"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_add"
                                app:tint="#BDBDBD"
                                android:alpha="0.5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="After"
                                android:textColor="#BDBDBD"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Notes: technician can add remarks"
                        android:textColor="#616161"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="32dp"
                android:text="Mark as Completed"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="@+id/cvInProgressDetailsBox"
                app:layout_constraintStart_toStartOf="@+id/cvInProgressDetailsBox"
                app:layout_constraintTop_toBottomOf="@+id/cvInProgressDetailsBox" />

            <!-- Step 5: Completed (Upcoming State) -->
            <ImageView
                android:id="@+id/ivStep5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="#BDBDBD"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPayment"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvCompletedStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Completed"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep5"
                app:layout_constraintTop_toTopOf="@+id/ivStep5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>