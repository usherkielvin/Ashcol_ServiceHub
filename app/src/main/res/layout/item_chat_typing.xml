<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start">

    <!-- AI Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/colorSurfaceVariant"
        android:padding="6dp"
        android:src="@drawable/ic_aichatbot"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.ServiceHub.Circle"
        app:tint="@color/service_icon_tint" />

    <!-- Typing Bubble -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chatbot_message"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center">

        <!-- Dot 1 -->
        <View
            android:id="@+id/typingDot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_circle_green"
            android:backgroundTint="?attr/colorOnSurfaceVariant"
            android:alpha="0.4" />

        <!-- Dot 2 -->
        <View
            android:id="@+id/typingDot2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_circle_green"
            android:backgroundTint="?attr/colorOnSurfaceVariant"
            android:alpha="0.4" />

        <!-- Dot 3 -->
        <View
            android:id="@+id/typingDot3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_green"
            android:backgroundTint="?attr/colorOnSurfaceVariant"
            android:alpha="0.4" />
    </LinearLayout>
</LinearLayout>
