<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="48dp"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:srcCompat="@mipmap/ic_launchericons_round"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        tools:src="@drawable/user" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_photo"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:backgroundTint="@color/apps_green"
                        app:icon="@drawable/ic_add"
                        app:iconSize="18dp"
                        app:iconTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/img_profile"
                        app:layout_constraintEnd_toEndOf="@id/img_profile"
                        app:layout_constraintHorizontal_bias="0.85"
                        app:layout_constraintVertical_bias="0.85"
                        app:layout_constraintStart_toStartOf="@id/img_profile"
                        app:layout_constraintTop_toTopOf="@id/img_profile"
                        app:shapeAppearanceOverlay="@style/CircleImage" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1B4332"
                    android:textSize="22sp"
                    tools:text="Yooxie Batumbakal" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    tools:text="email@gmail.com" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/branchCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/colorPrimaryContainer"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/tv_manager_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:textColor="@color/colorOnPrimaryContainer"
                        android:textSize="13sp"
                        tools:text="Manager | ASHCOL DASMA" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                app:shapeAppearanceOverlay="@style/ProfileContentCardShape"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="32dp"
                    android:paddingBottom="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Preferences"
                        android:textColor="@color/apps_green"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />

                    <!-- Display Row -->
                    <LinearLayout
                        android:id="@+id/btn_appearance"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="?attr/colorOnSurface">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/outline_dark_mode_24"
                                app:tint="?attr/colorSurface" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Display"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Notifications Row -->
                    <LinearLayout
                        android:id="@+id/btn_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/colorSecondaryContainer">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notifications"
                                app:tint="@color/colorOnSecondaryContainer" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Notifications"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Language Row -->
                    <LinearLayout
                        android:id="@+id/btn_language"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/colorSecondaryContainer">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_language"
                                app:tint="@color/colorOnSecondaryContainer" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Language"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:alpha="0.2"
                        android:background="?attr/colorOutline" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="General"
                        android:textColor="@color/apps_green"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />

                    <!-- Personal Information Row -->
                    <LinearLayout
                        android:id="@+id/btn_personal_info"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/colorSecondaryContainer">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person"
                                app:tint="@color/colorOnSecondaryContainer" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Personal Information"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Password Row -->
                    <LinearLayout
                        android:id="@+id/btn_password_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/colorSecondaryContainer">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_lock"
                                app:tint="@color/colorOnSecondaryContainer" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Password"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Payroll Row (Kept ID, Hidden per ڈیزائن) -->
                    <LinearLayout
                        android:id="@+id/btn_payroll"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/colorSecondaryContainer">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_wallet"
                                app:tint="@color/colorOnSecondaryContainer" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Payroll"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:alpha="0.2"
                        android:background="?attr/colorOutline" />

                    <!-- About Row (Mapped to btn_help for logic compatibility) -->
                    <LinearLayout
                        android:id="@+id/btn_help"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:backgroundTint="@color/apps_green">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_help"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="About us"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Sign Out Row -->
                    <LinearLayout
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="32dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_exit"
                            app:tint="@color/apps_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Sign Out"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Hidden legacy mapping -->
                    <TextView android:id="@+id/tv_branch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>