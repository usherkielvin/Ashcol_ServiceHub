<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardJobStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvJobStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Job Status"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:alpha="0.2"
            android:background="?attr/colorOutline" />

        <!-- Vertical Progress Tracker -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Connector line -->
            <View
                android:id="@+id/vLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="@+id/ivStep1"
                app:layout_constraintStart_toStartOf="@+id/ivStep1"
                app:layout_constraintTop_toTopOf="@+id/ivStep1" />

            <!-- Step 1: Assigned -->
            <ImageView
                android:id="@+id/ivStep1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_step_outline_green"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/status_green" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvDetailsBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivStep1"
                app:layout_constraintTop_toTopOf="@id/ivStep1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Assigned"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tvTicketId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ticket ID: CLN1005"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Name: Juan Dela Cruz"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCustomerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Phone number: 09123456789"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvServiceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Service Type: AC Cleaning"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Schedule: Feb 4, 2026 - 2:00 PM"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Note: “Please call before arriving.”"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelJob"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#FF9E9E"
                android:fontFamily="@font/poppins_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Cancel Job"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:cornerRadius="22dp"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="@+id/cvDetailsBox"
                app:layout_constraintStart_toStartOf="@+id/cvDetailsBox"
                app:layout_constraintTop_toBottomOf="@+id/cvDetailsBox" />

            <!-- Step 2: On the Way -->
            <ImageView
                android:id="@+id/ivStep2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="?attr/colorOutline"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCancelJob"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvOnWayStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="On the Way"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep2"
                app:layout_constraintTop_toTopOf="@+id/ivStep2" />

            <!-- Step 3: Arrived -->
            <ImageView
                android:id="@+id/ivStep3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="?attr/colorOutline"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOnWayStatus"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvArrivedStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Arrived"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep3"
                app:layout_constraintTop_toTopOf="@+id/ivStep3" />

            <!-- Step 4: In Progress -->
            <ImageView
                android:id="@+id/ivStep4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="?attr/colorOutline"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvArrivedStatus"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvInProgressStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="In Progress"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep4"
                app:layout_constraintTop_toTopOf="@+id/ivStep4" />

            <!-- Step 5: Completed -->
            <ImageView
                android:id="@+id/ivStep5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_circle_gray"
                android:backgroundTint="?attr/colorOutline"
                android:padding="6dp"
                android:src="@drawable/ic_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInProgressStatus"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvCompletedStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_input_white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Completed"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStep5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivStep5"
                app:layout_constraintTop_toTopOf="@+id/ivStep5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>