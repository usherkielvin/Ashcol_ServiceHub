<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ScrollView for responsiveness -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Polished Header -->
            <TextView
                android:id="@+id/tvPaymentHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.05"
                android:text="CONFIRM PAYMENT"
                android:textColor="#9E9E9E"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/headerDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:alpha="0.2"
                android:background="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@id/tvPaymentHeader" />

            <!-- Green Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#D1E7D1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/headerDivider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Ticket ID Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ticket ID:"
                            android:textColor="#424242"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvTicketId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="TCKTid_1004"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Customer Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Customer:"
                            android:textColor="#424242"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Juan Dela Cruz"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Service Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Service:"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:paddingEnd="16dp" />
                        <TextView
                            android:id="@+id/tvServiceName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Split AC General Cleaning"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:alpha="0.1"
                        android:background="#1B5E20" />

                    <!-- Total Amount Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Total Amount:"
                            android:textColor="#424242"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Php 8,500.00"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Centered Confirmation Description -->
            <TextView
                android:id="@+id/tvConfirmationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Select how this payment will be completed."
                android:textColor="#424242"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/cardDetails" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRequestOnlinePayment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#E3F2FD"
                android:fontFamily="@font/poppins_bold"
                android:text="Request Online Payment"
                android:textAllCaps="false"
                android:textColor="#1565C0"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="#1565C0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmationStatus" />

            <!-- Pill-Shaped Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPaymentConfirmed"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D1E7D1"
                android:fontFamily="@font/poppins_bold"
                android:text="Cash Received"
                android:textAllCaps="false"
                android:textColor="#1B5E20"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="#1B5E20"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/btnRequestOnlinePayment" />

            <!-- Hidden elements for ID compatibility -->
            <View android:id="@+id/layoutDivider" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
            <View android:id="@+id/layoutPaymentMethods" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
            <View android:id="@+id/btnCash" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
            <View android:id="@+id/btnOnline" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>