<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Fixed Branded Header Section with Elevation -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topHeaderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1B4332"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="91dp"
                android:layout_height="53dp"
                android:contentDescription="@string/desc_app_logo"
                android:scaleType="fitCenter"
                android:src="@drawable/ash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/locationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_badge"
                android:backgroundTint="#2D6A4F"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8">

                <TextView
                    android:id="@+id/tvAdminLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Taal, Batangas, CALABARZON"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_pin"
                    app:tint="#FFFFFF" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeaderCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Branch Overview Section -->
            <TextView
                android:id="@+id/branchesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Branch Overview"
                android:textColor="#1B4332"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/branchesSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Overview of all branch locations"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/branchesTitle"
                app:layout_constraintTop_toBottomOf="@+id/branchesTitle" />

            <TextView
                android:id="@+id/viewAllBranches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="View All"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/branchesSubtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/branchesTitle" />

            <LinearLayout
                android:id="@+id/branchPreviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/branchesSubtitle">
                
                <include layout="@layout/item_admin_branch_card" />
                <include layout="@layout/item_admin_branch_card" />
                
            </LinearLayout>

            <!-- Manager Overview Section -->
            <TextView
                android:id="@+id/managersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Manager Overview"
                android:textColor="#1B4332"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/branchPreviewLayout" />

            <TextView
                android:id="@+id/managersSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Key Metrics"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/managersTitle"
                app:layout_constraintTop_toBottomOf="@+id/managersTitle" />

            <TextView
                android:id="@+id/btnViewAllManagers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="View All"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/managersSub"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/managersTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/managersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@+id/managersSub"
                tools:itemCount="2"
                tools:listitem="@layout/item_admin_manager_card" />

            <!-- Hidden compatibility elements -->
            <View android:id="@+id/frameLayout3" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/imageView5" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/imageView6" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/searchViewWork" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/cardBranches" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/branchesHeader" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/managersHeader" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>