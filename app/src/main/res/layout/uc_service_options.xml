<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly1t2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_green"
    android:paddingBottom="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Choose a Service"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cleaning Button -->
    <View
        android:id="@+id/view"
        android:layout_width="60dp"
        android:layout_height="6dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="176dp"
        android:alpha="1"
        android:background="@drawable/bg_dragindicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cleaning"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="CLEANING"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:rippleColor="#57955C" />

    <!-- Repair Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_repair"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="REPAIR"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_cleaning"
        app:rippleColor="#57955C" />

    <!-- Installation Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_installation"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="INSTALLATION"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_repair"
        app:rippleColor="#57955C" />

    <!-- Maintenance Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_maintenance"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="MAINTENANCE"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_installation"
        app:rippleColor="#57955C" />

    <!-- Decorative Bottom Circle to match design -->
    <View
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/nav_indicator_shape"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_maintenance" />

</androidx.constraintlayout.widget.ConstraintLayout>
