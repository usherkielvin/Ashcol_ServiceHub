<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly1t2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="24dp">

    <!-- Drag Indicator -->
    <View
        android:id="@+id/view"
        android:layout_width="60dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        android:alpha="0.2"
        android:background="@drawable/bg_dragindicator"
        android:backgroundTint="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Choose a Service"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Service Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cleaning"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="CLEANING"
        android:textColor="#1B4332"
        android:textSize="14sp"
        app:backgroundTint="#D1E7D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintWidth_max="500dp"
        app:strokeColor="#1B4332"
        app:strokeWidth="0.5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_repair"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="REPAIR"
        android:textColor="#1B4332"
        android:textSize="14sp"
        app:backgroundTint="#D1E7D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_cleaning"
        app:strokeColor="#1B4332"
        app:strokeWidth="0.5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_installation"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="INSTALLATION"
        android:textColor="#1B4332"
        android:textSize="14sp"
        app:backgroundTint="#D1E7D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_repair"
        app:strokeColor="#1B4332"
        app:strokeWidth="0.5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_maintenance"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="MAINTENANCE"
        android:textColor="#1B4332"
        android:textSize="14sp"
        app:backgroundTint="#D1E7D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/btn_cleaning"
        app:layout_constraintStart_toStartOf="@id/btn_cleaning"
        app:layout_constraintTop_toBottomOf="@id/btn_installation"
        app:strokeColor="#1B4332"
        app:strokeWidth="0.5dp" />

    <!-- Visual Bottom Indicator -->
    <View
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_marginTop="24dp"
        android:alpha="0.1"
        android:background="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_maintenance" />

</androidx.constraintlayout.widget.ConstraintLayout>