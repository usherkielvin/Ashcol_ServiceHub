<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly1t2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="0dp"
    android:background="@drawable/bg_green">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="@string/choose_a_service"
        android:textAlignment="center"
        android:textColor="#215531"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_cleaning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cleaning"
        android:layout_width="356dp"
        android:layout_height="57dp"
        android:background="@drawable/verify_btn"
        android:backgroundTint="@null"
        android:text="@string/cleaning"
        app:layout_constraintBottom_toTopOf="@+id/btn_repair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <Button
        android:id="@+id/btn_repair"
        android:layout_width="325dp"
        android:layout_height="69dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/verify_btn"
        android:backgroundTint="@color/white"
        android:text="@string/repair"
        app:layout_constraintBottom_toTopOf="@+id/btn_installation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_installation"
        android:layout_width="357dp"
        android:layout_height="81dp"
        android:background="@drawable/verify_btn"
        android:backgroundTint="@color/white"
        android:text="@string/installation"
        app:layout_constraintBottom_toTopOf="@+id/btn_maintenance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <Button
        android:id="@+id/btn_maintenance"
        android:layout_width="276dp"
        android:layout_height="85dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/verify_btn"
        android:backgroundTint="@null"
        android:text="@string/maintenance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
