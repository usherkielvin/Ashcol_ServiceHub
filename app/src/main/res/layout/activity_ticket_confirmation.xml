<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:gravity="center"
    android:padding="24dp">

    <!-- Request Confirmed Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Confirmed"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Success Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your ticket has been successfully created"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Ticket ID Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input_white"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTicketId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASH-0001"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Information Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can track your ticket status in the 'My Tickets' section"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp" />

    <!-- Done Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_green"
        android:layout_marginTop="16dp" />

</LinearLayout>