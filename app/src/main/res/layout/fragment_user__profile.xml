<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/profile_title"
            android:textColor="#1A4330"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/desc_profile_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:srcCompat="@android:mipmap/sym_def_app_icon"
                tools:background="#DDDDDD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_photo"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/desc_edit_photo"
                app:backgroundTint="#00B050"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="20dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/img_profile"
                app:layout_constraintEnd_toEndOf="@id/img_profile"
                app:shapeAppearanceOverlay="@style/CircleImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="@string/profile_default_name"
            android:textColor="#1A4330"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:text="@string/profile_default_username"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/profile_preferences"
            android:textColor="#386A4E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Appearance Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_appearance"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_appearance"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_palette"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <!-- Notifications Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notifications"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_notifications"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_notifications"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <!-- Language Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_language"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_language"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_language"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/profile_general"
            android:textColor="#386A4E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Personal Information Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_personal_info"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_personal_info"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_person"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <!-- Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_privacy"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_password_privacy"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_lock"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <!-- Payroll Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_payroll"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_payroll"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_wallet"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- Help Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_help"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_help_feedback"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_help"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

        <!-- Sign Out Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_out"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/profile_sign_out"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="8dp"
            app:icon="@drawable/ic_exit"
            app:iconTint="#1A4330"
            app:iconSize="24dp"
            app:iconPadding="16dp"
            app:iconGravity="start" />

    </LinearLayout>

</ScrollView>
