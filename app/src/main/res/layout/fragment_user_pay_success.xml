<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.05"
            android:shadowColor="#80000000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:text="TRANSACTION COMPLETE"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="?attr/colorOutline"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Progress Tracker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="16dp">

                <!-- Step 1: Work Completed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_step_solid_green">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_completed"
                            app:tint="@color/white" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Work Completed"
                        android:textColor="@color/apps_green"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/status_green" />

                <!-- Step 2: Payment -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_step_solid_green">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_completed"
                            app:tint="@color/white" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Payment"
                        android:textColor="@color/apps_green"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/status_green" />

                <!-- Step 3: Successful -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_step_solid_green">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_completed"
                            app:tint="@color/white" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Successful"
                        android:textColor="@color/apps_green"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvSuccessTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Payment Successful!"
                android:textColor="@color/apps_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSuccessSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Your payment has been confirmed.\nYour request is now complete."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7" />

            <!-- Transaction Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/colorPrimaryContainer"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:strokeColor="@color/status_green"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ticket ID:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTicketId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="CLN1004"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Service:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvServiceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Split AC General Cleaning - 1 unit"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Technician:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTechnicianName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Juan Dela Cruz"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Date &amp; Time:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Feb 9, 2026 - 9:00 AM"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:alpha="0.2"
                        android:background="@color/colorOnPrimaryContainer" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Amount Paid:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvAmountPaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Php 8,500.00"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Payment Method:"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Online"
                            android:textColor="@color/colorOnPrimaryContainer"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToDashboard"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#CCCCCC"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="40dp"
                android:text="Back to Dashboard"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:cornerRadius="28dp"
                app:strokeColor="#9E9E9E"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>