<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Mode version of the base application theme -->
    <style name="Theme.ServiceHubApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Status and Navigation Bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Surface and On-Surface colors (Pure Black/White/Grey) -->
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">#121212</item>
        <item name="colorOnSurfaceVariant">#BDBDBD</item>
        <item name="colorOutline">#2C2C2C</item>

        <!-- Brand Colors -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#1B4332</item>
        <item name="colorOnPrimaryContainer">#FFFFFF</item>

        <item name="colorSecondary">#4CAF50</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">#2C2C2C</item>
        <item name="colorOnSecondaryContainer">#FFFFFF</item>

        <!-- Remove selection pill background -->
        <item name="colorSecondaryContainer">@android:color/transparent</item>
    </style>
</resources>